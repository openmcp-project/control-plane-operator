{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "git-submodules": {
    "enabled": true
  },
  "minimumReleaseAge": "0 days",
  "extends": [
    "config:recommended",
    "config:best-practices",
    "security:openssf-scorecard",
    "helpers:pinGitHubActionDigests",
    ":rebaseStalePrs"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "gomod"
      ],
      "matchDepNames": [
        "go"
      ],
      "matchDepTypes": [
        "golang"
      ],
      "rangeStrategy": "bump"
    },
    {
      "description": "Combine crossplane updates in a single PR",
      "matchDatasources": [
        "go"
      ],
      "matchPackageNames": [
        "^github\\.com/crossplane"
      ],
      "groupName": "crossplane dependencies",
      "groupSlug": "crossplane-dependencies"
    },
    {
      "description": "Combine fluxcd updates in a single PR",
      "matchDatasources": [
        "go"
      ],
      "groupName": "fluxcd dependencies",
      "groupSlug": "fluxcd-dependencies",
      "matchPackageNames": [
        "/^github\\.com/fluxcd/"
      ]
    },
    {
      "description": "Ignore our own image in chart as it will be updated on release",
      "matchPackageNames": ["ghcr.io/openmcp-project/images/control-plane-operator"],
      "matchManagers": ["helm-values"],
      "enabled": false
    }
  ]
}
